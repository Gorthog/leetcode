  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Debug current file",
      "type": "pwa-node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "--allow-all", "${fileBasename}"],
      "outputCapture": "std",
      "attachSimplePort": 9229
    }
  ]
}
